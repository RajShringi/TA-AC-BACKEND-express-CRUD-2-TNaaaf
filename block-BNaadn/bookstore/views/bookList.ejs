<!DOCTYPE html>
<html>
  <head>
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="container mx-auto">
      <div class="flex justify-between items-center">
        <% books.forEach(book => { %>
        <a
          href="/books/<%= book.id %>"
          class="basis-1/4 shadow rounded p-4 my-4 text-center"
        >
          <img
            class="object-cover mx-auto"
            src="<%= book.cover_image %>"
            alt=""
          />
          <h1 class="text-red-400 my-2 font-bold text-lg"><%= book.title %></h1>
          <p class="text-gray-500"><%= book.summary.substring(0, 100) %>...</p>
        </a>
        <% }) %>
      </div>
    </div>
  </body>
</html>
